@page
@model MaktabShop.Presentations.RazorPages.Pages.Products.IndexModel
@{
}
<h1>Index Product Page</h1>



<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Category</th>
            <th scope="col">Operation</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <th scope="row">@product.Id</th>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@product.Category.Name</td>
                <td>
                    <a class="btn btn-warning" asp-page="Update" asp-route-id="@product.Id">Update</a>
                    <a class="btn btn-danger" asp-page="Delete" asp-route-id="@product.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

