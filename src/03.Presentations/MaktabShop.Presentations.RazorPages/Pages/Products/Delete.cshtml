@page
@model MaktabShop.Presentations.RazorPages.Pages.Products.DeleteModel
@{
}

<div class="container px-5 my-5">
    <form method="post">



        <input class="form-control" asp-for="Product.Id" type="hidden" placeholder="Name" />

        <div class="form-floating mb-3">
            <input class="form-control" asp-for="Product.Name" type="text" placeholder="Name" data-sb-validations="required"  disabled/>
            <label for="name">Name</label>
        </div>
        <div class="form-floating mb-3">
            <input class="form-control" asp-for="Product.Price" type="text" placeholder="Price" data-sb-validations="required" disabled />
            <label for="price">Price</label>
        </div>
        <div class="form-floating mb-3">
            <textarea class="form-control" asp-for="Product.Description" type="text" placeholder="Description" style="height: 10rem;" data-sb-validations="required" disabled></textarea>
            <label for="description">Description</label>
        </div>
        <div class="form-floating mb-3">
            <input class="form-control" asp-for="Product.Category.Name" type="text" placeholder="Category" style="height: 10rem;" data-sb-validations="required" disabled></input>
            <label for="description">Category</label>
        </div>
        <div class="d-grid">
            <button 
                class="btn btn-danger btn-lg" 
                id="submitButton" 
                onclick="return confirm('Are you sure you want to delete this item?');"
                type="submit">Delete</button>
        </div>
    </form>
</div>
